  "identity_vocabulary": {
    "description": "LGBTQIA+ identity terms that provide context for crisis detection",
    "enabled": "${NLP_IDENTITY_TERMS_ENABLED}",
    "boost_factor": "${NLP_IDENTITY_BOOST_FACTOR}",
    "context_required": "${NLP_IDENTITY_CONTEXT_REQUIRED}",
    "defaults": {
      "enabled": true,
      "boost_factor": 0.05,
      "context_required": false,
      "weight": 0.7,
      "crisis_relevance": "medium"
    },
    "validation": {
      "enabled": {"type": "boolean", "required": true},
      "boost_factor": {"type": "float", "range": [0.0, 1.0]},
      "context_required": {"type": "boolean", "required": true},
      "weight": {"type": "float", "range": [0.0, 2.0]}
    },
    "terms": [
      "trans", "transgender", "gay", "lesbian", "bisexual", "pansexual", 
      "asexual", "queer", "enby", "nonbinary", "genderfluid", "agender", 
      "demisexual", "aromantic", "genderqueer", "two-spirit", "questioning"
    ]
  },

