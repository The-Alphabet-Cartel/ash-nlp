    "validation": {
      "enabled": {"type": "boolean", "required": true},
      "urgency_threshold": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
      "staff_review_required": {"type": "boolean", "required": true}
    },

    "family_acceptance_crisis": {
      "description": "Patterns indicating family acceptance issues",
      "crisis_level": "${NLP_FAMILY_CRISIS_LEVEL}",
      "patterns": [
        {
          "pattern": "(family|parents) (kicked me out|disowned|cut me off)",
          "type": "regex",
          "weight": "${NLP_FAMILY_REJECTION_WEIGHT}",
          "urgency": "${NLP_FAMILY_REJECTION_URGENCY}"
        },
        {
          "pattern": "(coming out|told) (family|parents) (disaster|wrong|bad)",
          "type": "regex", 
          "weight": "${NLP_COMING_OUT_CRISIS_WEIGHT}",
          "urgency": "${NLP_COMING_OUT_CRISIS_URGENCY}"
        }
      ],
      "defaults": {
        "crisis_level": "high",
        "weight": 1.0,
        "urgency": "high"
      },
      "validation": {
        "crisis_level": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
        "weight": {"type": "float", "range": [0.0, 2.0]},
        "urgency": {"type": "string", "enum": ["low", "medium", "high", "critical"]}
      }
    },

