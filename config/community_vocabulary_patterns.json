  "community_support_vocabulary": {
    "description": "Positive community terms that may reduce crisis likelihood",
    "enabled": "${NLP_COMMUNITY_SUPPORT_ENABLED}",
    "boost_factor": "${NLP_COMMUNITY_SUPPORT_BOOST}",
    "modifier": "${NLP_COMMUNITY_SUPPORT_MODIFIER}",
    "defaults": {
