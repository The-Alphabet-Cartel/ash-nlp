  "crisis_patterns": {
    "description": "Specific crisis pattern combinations from LGBTQIA+ experiences",
    "enabled": "${NLP_CRISIS_PATTERNS_ENABLED}",
    "urgency_threshold": "${NLP_CRISIS_URGENCY_THRESHOLD}",
    "staff_review_required": "${NLP_CRISIS_STAFF_REVIEW_REQUIRED}",
    "defaults": {
      "enabled": true,
      "urgency_threshold": "medium",
      "staff_review_required": true,
      "immediate_escalation": false
