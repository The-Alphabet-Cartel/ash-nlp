      "crisis_level": "${NLP_IDENTITY_CRISIS_LEVEL}",
      "patterns": [
        {
          "pattern": "(gender|trans|gay|lesbian|bi) (panic|crisis|confusion)",
          "type": "regex",
          "weight": "${NLP_IDENTITY_PANIC_WEIGHT}",
          "urgency": "${NLP_IDENTITY_PANIC_URGENCY}"
