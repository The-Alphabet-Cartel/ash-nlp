{
  "description": "Learning system configuration for Ash-NLP v3.1d",
  "version": "3.1d-step9",
  "last_updated": "2025-08-10",
  "learning_enabled": {
    "description": "Enable/disable learning system functionality",
    "value": "${GLOBAL_FEATURE_ENABLE_LEARNING_SYSTEM}",
    "defaults": {
      "value": true
    },
    "validation": {
      "type": "boolean",
      "required": true
    }
  },
  "learning_persistence": {
    "description": "Learning data persistence configuration",
    "file": "${NLP_ANALYSIS_LEARNING_PERSISTENCE_FILE}",
    "backup_directory": "./learning_data/backups",
    "auto_backup": true,
    "backup_frequency_hours": 24,
    "defaults": {
      "file": "./learning_data/adjustments.json",
      "backup_directory": "./learning_data/backups",
      "auto_backup": true,
      "backup_frequency_hours": 24
    },
    "validation": {
      "file": {
        "type": "string",
        "required": true
      },
      "backup_frequency_hours": {
        "type": "integer",
        "range": [1, 168]
      }
    }
  },
  "learning_rate": {
    "description": "Base learning rate for threshold adjustments",
    "value": "${NLP_ANALYSIS_LEARNING_RATE}",
    "defaults": {
      "value": 0.01
    },
    "validation": {
      "type": "float",
      "range": [0.001, 0.1]
    }
  },
  "confidence_adjustments": {
    "description": "Confidence adjustment limits for learning system",
    "min_adjustment": "${NLP_ANALYSIS_LEARNING_MIN_CONFIDENCE_ADJUSTMENT}",
    "max_adjustment": "${NLP_ANALYSIS_LEARNING_MAX_CONFIDENCE_ADJUSTMENT}",
    "defaults": {
      "min_adjustment": 0.05,
      "max_adjustment": 0.3
    },
    "validation": {
      "type": "float",
      "range": [0.01, 0.5],
      "ordering": "max_adjustment > min_adjustment"
    }
  },
  "daily_limits": {
    "description": "Daily adjustment limits to prevent over-learning",
    "max_adjustments_per_day": "${NLP_ANALYSIS_LEARNING_MAX_ADJUSTMENTS_PER_DAY}",
    "defaults": {
      "max_adjustments_per_day": 50
    },
    "validation": {
      "type": "integer",
      "range": [1, 1000]
    }
  },
  "feedback_parameters": {
    "description": "Staff feedback integration parameters",
    "feedback_weight": "${NLP_ANALYSIS_LEARNING_FEEDBACK_WEIGHT}",
    "min_samples": "${NLP_ANALYSIS_LEARNING_MIN_SAMPLES}",
    "adjustment_limit": "${NLP_ANALYSIS_LEARNING_ADJUSTMENT_LIMIT}",
    "defaults": {
      "feedback_weight": 0.1,
      "min_samples": 5,
      "adjustment_limit": 0.05
    },
    "validation": {
      "feedback_weight": {
        "type": "float",
        "range": [0.01, 1.0]
      },
      "min_samples": {
        "type": "integer",
        "range": [1, 100]
      },
      "adjustment_limit": {
        "type": "float",
        "range": [0.01, 0.2]
      }
    }
  },
  "sensitivity_controls": {
    "description": "Global sensitivity drift protection",
    "max_drift": "${NLP_ANALYSIS_LEARNING_MAX_DRIFT}",
    "min_sensitivity": "${NLP_ANALYSIS_LEARNING_MIN_SENSITIVITY}",
    "max_sensitivity": "${NLP_ANALYSIS_LEARNING_MAX_SENSITIVITY}",
    "defaults": {
      "max_drift": 0.1,
      "min_sensitivity": 0.5,
      "max_sensitivity": 1.5
    },
    "validation": {
      "type": "float",
      "max_drift": {
        "range": [0.01, 0.5]
      },
      "sensitivity_range": {
        "range": [0.1, 3.0]
      },
      "ordering": "max_sensitivity > min_sensitivity"
    }
  },
  "feedback_factors": {
    "description": "False positive/negative correction factors",
    "false_positive_factor": "${NLP_ANALYSIS_LEARNING_FALSE_POSITIVE_FACTOR}",
    "false_negative_factor": "${NLP_ANALYSIS_LEARNING_FALSE_NEGATIVE_FACTOR}",
    "defaults": {
      "false_positive_factor": -0.1,
      "false_negative_factor": 0.1
    },
    "validation": {
      "type": "float",
      "range": [-0.5, 0.5],
      "relationship": "false_positive_factor should be negative, false_negative_factor should be positive"
    }
  },
  "severity_multipliers": {
    "description": "Severity-based adjustment multipliers",
    "high": "${NLP_ANALYSIS_LEARNING_SEVERITY_HIGH}",
    "medium": "${NLP_ANALYSIS_LEARNING_SEVERITY_MEDIUM}",
    "low": "${NLP_ANALYSIS_LEARNING_SEVERITY_LOW}",
    "defaults": {
      "high": 3.0,
      "medium": 2.0,
      "low": 1.0
    },
    "validation": {
      "type": "float",
      "range": [0.5, 10.0],
      "ordering": "high > medium > low"
    }
  }
}