{
  "_metadata": {
    "file_version": "v3.1-3d-5.5-1",
    "last_modified": "2025-08-14",
    "clean_architecture": "v3.1 Compliant",
    "configuration_version": "3d.10.10",
    "description": "Unified logging configuration for NLP crisis detection system",
    "created_date": "2025-08-12",
    "updated_date": "2025-08-14",
    "compliance": "Clean Architecture v3.1 Standards",
    "manager": "LoggingConfigManager",
    "consolidation_source": "Phase 3d Step 10.10 - Environmental variables cleanup - mapped to existing .env.template variables",
    "cleanup_note": "Placeholder variables mapped to existing environment variables used in code"
  },

  "global_settings": {
    "description": "Core logging settings - GLOBAL_LOG_LEVEL preserved for ecosystem compatibility",
    "log_level": "${GLOBAL_LOG_LEVEL}",
    "log_file": "${NLP_LOG_FILE}",
    "log_directory": "${NLP_STORAGE_LOGS_DIR}",
    "enable_console_output": "${GLOBAL_LOGGING_ENABLE_CONSOLE}",
    "enable_file_output": "${GLOBAL_LOGGING_ENABLE_FILE}",
    "defaults": {
      "log_level": "INFO",
      "log_file": "nlp_service.log",
      "log_directory": "./logs",
      "enable_console_output": true,
      "enable_file_output": true
    },
    "validation": {
      "log_level": {
        "type": "string",
        "allowed_values": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
        "description": "Global logging level for the entire system"
      },
      "log_file": {
        "type": "string",
        "pattern": "^[\\w\\-_.]+\\.log$",
        "description": "Primary log file name"
      },
      "log_directory": {
        "type": "string",
        "description": "Directory for log files (created if missing)"
      },
      "enable_console_output": {
        "type": "boolean",
        "description": "Enable logging output to console/stdout"
      },
      "enable_file_output": {
        "type": "boolean",
        "description": "Enable logging output to file"
      }
    }
  },

  "detailed_logging": {
    "description": "Granular logging controls for different system components",
    "enable_detailed": "${NLP_LOGGING_ENABLE_DETAILED}",
    "include_raw_labels": "${NLP_LOGGING_INCLUDE_RAW_LABELS}",
    "analysis_steps": "${NLP_LOGGING_ANALYSIS_STEPS}",
    "performance_metrics": "${NLP_LOGGING_PERFORMANCE_METRICS}",
    "include_reasoning": "${NLP_LOGGING_INCLUDE_REASONING}",
    "defaults": {
      "enable_detailed": true,
      "include_raw_labels": true,
      "analysis_steps": false,
      "performance_metrics": true,
      "include_reasoning": true
    },
    "validation": {
      "enable_detailed": {
        "type": "boolean",
        "description": "Enable detailed logging across the system"
      },
      "include_raw_labels": {
        "type": "boolean",
        "description": "Include raw model prediction labels in logs"
      },
      "analysis_steps": {
        "type": "boolean",
        "description": "Log individual analysis processing steps (verbose)"
      },
      "performance_metrics": {
        "type": "boolean",
        "description": "Log timing and performance metrics"
      },
      "include_reasoning": {
        "type": "boolean",
        "description": "Include decision reasoning in log messages"
      }
    }
  },

  "component_logging": {
    "description": "Logging controls for specific system components",
    "threshold_changes": "${NLP_LOGGING_THRESHOLD_CHANGES}",
    "model_disagreements": "${NLP_LOGGING_MODEL_DISAGREEMENTS}",
    "staff_review_triggers": "${NLP_LOGGING_STAFF_REVIEW_TRIGGERS}",
    "pattern_adjustments": "${NLP_LOGGING_PATTERN_ADJUSTMENTS}",
    "learning_updates": "${NLP_LOGGING_LEARNING_UPDATES}",
    "label_mappings": "${NLP_LOGGING_LABEL_MAPPINGS}",
    "ensemble_decisions": "${NLP_LOGGING_ENSEMBLE_DECISIONS}",
    "crisis_detection": "${NLP_LOGGING_CRISIS_DETECTION}",
    "defaults": {
      "threshold_changes": true,
      "model_disagreements": true,
      "staff_review_triggers": true,
      "pattern_adjustments": true,
      "learning_updates": true,
      "label_mappings": true,
      "ensemble_decisions": true,
      "crisis_detection": true
    },
    "validation": {
      "threshold_changes": {
        "type": "boolean",
        "description": "Log automatic threshold adjustments"
      },
      "model_disagreements": {
        "type": "boolean",
        "description": "Log when ensemble models disagree"
      },
      "staff_review_triggers": {
        "type": "boolean",
        "description": "Log when staff review is triggered"
      },
      "pattern_adjustments": {
        "type": "boolean",
        "description": "Log crisis pattern adjustments"
      },
      "learning_updates": {
        "type": "boolean",
        "description": "Log learning system updates"
      },
      "label_mappings": {
        "type": "boolean",
        "description": "Log label mapping decisions"
      },
      "ensemble_decisions": {
        "type": "boolean",
        "description": "Log ensemble decision process"
      },
      "crisis_detection": {
        "type": "boolean",
        "description": "Log crisis detection events"
      }
    }
  },

  "development_logging": {
    "description": "Debug and development logging settings",
    "debug_mode": "${NLP_LOGGING_DEBUG_MODE}",
    "trace_requests": "${NLP_LOGGING_TRACE_REQUESTS}",
    "log_configuration_loading": "${NLP_LOGGING_CONFIG_LOADING}",
    "log_manager_initialization": "${NLP_LOGGING_MANAGER_INIT}",
    "log_environment_variables": "${NLP_LOGGING_ENV_VARS}",
    "defaults": {
      "debug_mode": false,
      "trace_requests": false,
      "log_configuration_loading": false,
      "log_manager_initialization": true,
      "log_environment_variables": false
    },
    "validation": {
      "debug_mode": {
        "type": "boolean",
        "description": "Enable debug mode logging (very verbose)"
      },
      "trace_requests": {
        "type": "boolean",
        "description": "Trace HTTP requests (development only)"
      },
      "log_configuration_loading": {
        "type": "boolean",
        "description": "Log configuration loading process"
      },
      "log_manager_initialization": {
        "type": "boolean",
        "description": "Log manager initialization events"
      },
      "log_environment_variables": {
        "type": "boolean",
        "description": "Log environment variable values (security sensitive)"
      }
    }
  }
}